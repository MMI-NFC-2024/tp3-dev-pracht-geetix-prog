---
import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <div class="h-20 bg-blue-300 fixed top-0 left-0 right-0 z-10">
      <div class="container mx-auto h-full flex items-center justify-between px-6">
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gray-800">Les peinguins</h1>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/" class="text-blue-700">Accueil</a>
          <p class="text-gray-600 font-medium">Séléctionnez une page :</p>
          <div class="relative">
            <select id="species" class="appearance-none pointer bg-white border border-gray-300 rounded-md py-2 pl-3 pr-10 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
              <option value="Adelie">Adelie</option>
              <option value="Chinstrap">Chinstrap</option>
              <option value="Gentoo">Gentoo</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
    <slot />
  </body>
</html>

<script>
  document.querySelector("#species")?.addEventListener("change", (evt) => {
      const value = (evt.target as HTMLSelectElement).value;
      location.pathname = "/species/" + value;
    });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
