---
import Layout from "../../layouts/Layout.astro";
import GraphicSpecies from "../../components/GraphicSpecies.astro";
---

<Layout>
    <div class="flex flex-col items-center space-y-20 mt-10">
        <h1 class="text-2xl">Test Astro et Plot (Observablehq)</h1>
        <GraphicSpecies species="Gentoo"/>
    </div>
    <nav class="flex justify-center space-x-10 my-10">
        <a
            href="/"
            class="bg-blue-500 text-white rounded px-5 py-2.5 border-b-3 border-r-3 border-blue-700 hover:border-0 transition-all"
            >Accueil</a
        >
        <a
            href=":Adelie"
            class="bg-blue-500 text-white rounded px-5 py-2.5 border-b-3 border-r-3 border-blue-700 hover:border-0 transition-all"
            >Adelie</a
        >
        <a
            href="Chinstrap"
            class="bg-blue-500 text-white rounded px-5 py-2.5 border-b-3 border-r-3 border-blue-700 hover:border-0 transition-all"
            >Chinstrap</a
        >
    </nav>
</Layout>
